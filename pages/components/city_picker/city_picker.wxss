/* pages/components/city_picker/city_picker.wxss */
.selectedCity {
    margin-top: 20px;
    padding: 10px 20px;
    background: white;
}
.province {
    float: left;
    padding-top: 3px;
}
.province_bg {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .4);
    z-index: 999;
}
.province_list {
    position: absolute;
    bottom: 0;
    overflow: hidden;
    width: 100%;
    height: 600rpx;
    z-index: 1000;
    background: white;
    transition: all 1s linear;
}
.province_title {
    padding: 10px 0;
    width: 100%;
    text-align: center;
    border-bottom: 1px solid gray;
}
.close_icon {
    position: absolute;
    right: 30rpx;
    top:20rpx;
    padding: 10rpx;
    width: 25rpx;
    height: 25rpx;
    line-height: 20rpx;
    font-size: 30rpx;
    color: #ccc;
    border: 1rpx solid #ccc;
    border-radius: 50%;
    text-align: center;
    background: #fff;
}
.province_box {
    overflow: hidden;
    margin: 20rpx 0;
    width: 100%;
    height: 440rpx;
}
.name_box {
    float: left;
    width: 33.33%;
    height: 100%;
    text-align: center;
}
.content {
    padding: 18rpx 0;
    font-size: 36rpx;
}
.selectCol {
    color: #3DA5FE;
}